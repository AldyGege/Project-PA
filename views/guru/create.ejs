<%- include('../partials/__head.ejs') %>
<body>
    <div class="container-scroller d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <!-- partial:partials/_navbar.html -->
    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper d-flex align-items-center justify-content-center">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Input Data guru</h4>
                        <p class="card-description">
                            Basic form layout for news
                        </p>
                        <form action="/guru/store" method="POST" enctype="multipart/form-data" class="forms-sample">
                            <div class="form-group">
                                <label for="gambar_guru">Foto guru</label>
                                <input type="file" class="form-control" id="gambar_guru" name="gambar_guru" required>
                            </div>
                            <div class="form-group">
                                <label for="nama_guru">Nama Guru</label>
                                <input type="text" class="form-control" id="nama_guru" name="nama_guru" placeholder="Nama Guru" required>
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlSelect2">Nama Mapel</label>
                                <select class="form-control" id="exampleFormControlSelect2" name="id_mapel" required>
                                    <option selected>Pilih Mapel</option>
                                    <% for(var i=0; i < data_mapel.length; i++){ %>
                                        <option value="<%= data_mapel[i].id_mapel %>"><%= data_mapel[i].nama_mapel %></option>
                                    <% } %>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <button type="button" class="btn btn-light" onclick="history.back()">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>
<!-- container-scroller ends -->
<%- include('../partials/__foot.ejs') %>
</body>
