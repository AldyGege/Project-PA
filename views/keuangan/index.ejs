<%- include('../partials/__head.ejs') %>
<body>
<div class="container-scroller">
    <%- include('../partials/__nav.ejs') %>
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="container mt-5">

                <!-- Tombol tambah -->
                <div class="mb-3">
                    <a href="/keuangan/create" class="btn btn-sm btn-success">Tambah keuangan</a>
                </div>

                <!-- Tabel Pemasukan -->
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Data Pemasukan</h4>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Nama</th>
                                                <th>Deskripsi</th>
                                                <th>Nominal</th>
                                                <th>Waktu (dd/mm/yyyy)</th>
                                                <th>Uploader</th>
                                                <th>Aksi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% let noPemasukan = 1; %>
                                            <% data.forEach(item => { if(item.jenis_keuangan === 'pemasukan') { %>
                                                <tr>
                                                    <td><%= noPemasukan++ %></td>
                                                    <td><%= item.nama_keuangan %></td>
                                                    <td><%= item.deskripsi_keuangan.length > 100 ? item.deskripsi_keuangan.substring(0, 100) + '...' : item.deskripsi_keuangan %></td>
                                                    <td><%= item.nominal.toLocaleString('id-ID') %></td>
                                                    <td>
                                                        <% 
                                                            const t = new Date(item.waktu_keuangan);
                                                            const tanggal = ("0" + t.getDate()).slice(-2) + "-" + ("0" + (t.getMonth() + 1)).slice(-2) + "-" + t.getFullYear();
                                                        %>
                                                        <%= tanggal %>
                                                    </td>
                                                    <td><%= item.nama_admin %></td>
                                                    <td>
                                                        <a href="/keuangan/edit/<%= item.id_keuangan %>" class="btn btn-sm btn-warning">Edit</a>
                                                        <a href="/keuangan/delete/<%= item.id_keuangan %>" class="btn btn-sm btn-danger">Delete</a>
                                                    </td>
                                                </tr>
                                            <% } }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tabel Pengeluaran -->
                <div class="row mt-4">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Data Pengeluaran</h4>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Nama</th>
                                                <th>Deskripsi</th>
                                                <th>Nominal</th>
                                                <th>Waktu (dd/mm/yyyy)</th>
                                                <th>Uploader</th>
                                                <th>Aksi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% let noPengeluaran = 1; %>
                                            <% data.forEach(item => { if(item.jenis_keuangan === 'pengeluaran') { %>
                                                <tr>
                                                    <td><%= noPengeluaran++ %></td>
                                                    <td><%= item.nama_keuangan %></td>
                                                    <td><%= item.deskripsi_keuangan.length > 100 ? item.deskripsi_keuangan.substring(0, 100) + '...' : item.deskripsi_keuangan %></td>
                                                    <td><%= item.nominal.toLocaleString('id-ID') %></td>
                                                    <td>
                                                        <% 
                                                            const t = new Date(item.waktu_keuangan);
                                                            const tanggal = ("0" + t.getDate()).slice(-2) + "-" + ("0" + (t.getMonth() + 1)).slice(-2) + "-" + t.getFullYear();
                                                        %>
                                                        <%= tanggal %>
                                                    </td>
                                                    <td><%= item.nama_admin %></td>
                                                    <td>
                                                        <a href="/keuangan/edit/<%= item.id_keuangan %>" class="btn btn-sm btn-warning">Edit</a>
                                                        <a href="/keuangan/delete/<%= item.id_keuangan %>" class="btn btn-sm btn-danger">Delete</a>
                                                    </td>
                                                </tr>
                                            <% } }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<%- include('../partials/__foot.ejs') %>
</body>
</html>
