<%- include('../partials/__head.ejs') %>

<style>
  :root {
    --dark-blue-color: #025589;
    --secondary-color: #02894D;
  }

  .btn-primary {
    background-color: var(--dark-blue-color);
    border-color: var(--dark-blue-color);
  }

  /* FORM LEBIH LEBAR KE SAMPING */
  .form-container {
    max-width: 550px; /* Lebar form diperbesar ke samping */
    background: #fff;
    border-radius: 10px;
    padding: 50px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    width: 100%; /* Memastikan form mengikuti max-width */
  }

  .form-group {
    margin-bottom: 15px;
  }

  .large-logo {
    width: 320px;
    height: auto;
    display: block;
    margin: 0 auto 20px auto;
  }

</style>

<body>
  <div class="container-scroller d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="form-container">
      <div class="text-center">
        <img src="../../images/logo-madrasah.png" alt="logo" class="large-logo">
        <h4>Selamat Datang di Madrasah At-Taqwa</h4>
        <h6 class="font-weight-light">Silahkan Log-in Terlebih Dahulu.</h6>
      </div>

      <%- include('../partials/__messagess.ejs') %>

      <form action="/logusers" method="POST" class="pt-3">
        <div class="form-group">
          <input type="email" class="form-control form-control-lg" placeholder="Email" name="email_users" required>
        </div>
        <div class="form-group">
          <input type="password" class="form-control form-control-lg" placeholder="Password" name="password_users" required>
        </div>

        <div class="my-2 d-flex justify-content-between align-items-center">
          <div class="form-check">
            <label class="form-check-label text-muted">
              <input type="checkbox" class="form-check-input">
              Keep me signed in
            </label>
          </div>
          <a href="/forgot-password" class="auth-link">Forgot password?</a>
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-secondary btn-lg font-weight-medium w-100">SIGN IN</button>
        </div>

        <div class="text-center mt-4 font-weight-light">
          Don't have an account? <a href="/register_users" class="text-primary">Create</a>
        </div>
      </form>
    </div>
  </div>
</body>
