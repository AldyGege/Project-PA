<%- include('../partials/__head.ejs') %>
<body>
    <div class="container-scroller d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <!-- partial:partials/_navbar.html -->
    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper d-flex align-items-center justify-content-center">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Input Data Berita</h4>
                        <p class="card-description">
                            Basic form layout for news
                        </p>
                        <form action="/berita/store" method="POST" enctype="multipart/form-data" class="forms-sample">
                            <div class="form-group">
                                <label for="gambar_berita">Foto Berita</label>
                                <input type="file" class="form-control" id="gambar_berita" name="gambar_berita" required>
                            </div>
                            <div class="form-group">
                                <label for="nama_berita">Judul Berita</label>
                                <input type="text" class="form-control" id="nama_berita" name="nama_berita" placeholder="Judul Berita" required>
                            </div>
                            <div class="form-group">
                                <label for="deskripsi_berita">Deskripsi Berita</label>
                                <textarea class="form-control" id="deskripsi_berita" name="deskripsi_berita" placeholder="Deskripsi Berita" rows="4" required></textarea>
                            </div>
                            <input type="hidden" id="tanggal_upload" name="tanggal_upload">
                            <div class="form-group">
                                <input type="text" class="form-control" id="nama_admin" name="nama_admin" value="<%= data2.nama_admin %>" readonly>
                            </div>
                            <input type="hidden" name="id_admin" value="<%= data2.id_admin %>">
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <button type="button" class="btn btn-light" onclick="history.back()">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>

    <script>
        // Mengisi tanggal upload secara otomatis
        document.addEventListener("DOMContentLoaded", function () {
            let now = new Date();
            let formattedDate = now.toLocaleString("en-CA", { 
                year: "numeric", 
                month: "2-digit", 
                day: "2-digit", 
                hour: "2-digit", 
                minute: "2-digit", 
                second: "2-digit",
                hour12: false 
            }).replace(",", ""); // Menghilangkan koma antara tanggal & waktu
        
            document.getElementById("tanggal_upload").value = formattedDate;
        });
        
    </script>
<!-- container-scroller ends -->
<%- include('../partials/__foot.ejs') %>
</body>
