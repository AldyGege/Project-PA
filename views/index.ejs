<section id="mapel" class="services section light-background">
  <!-- Section Title -->
  <div class="container section-title" data-aos="fade-up">
    <h2>Program Pendidikan</h2>
    <p>Pilih mata pelajaran yang ingin Anda pelajari</p>
  </div><!-- End Section Title -->

  <div class="container">
    <div class="swiper mySwiper">
      <div class="swiper-wrapper">
        <% data2.forEach((mapel, index) => { %>
          <div class="swiper-slide" data-aos="fade-up" data-aos-delay="<%= (index + 1) * 100 %>">
            <a  class="service-item item-cyan position-relative text-decoration-none d-flex flex-column align-items-center justify-content-center text-center p-3">
              <div class="icon mb-3">
                <img src="/images/mapel/<%= mapel.gambar_mapel %>" height="70" width="70" class="circle-img" />
              </div>
              <h3><%= mapel.nama_mapel %></h3>
