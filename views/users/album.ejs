                 data-title="<%= item.nama_album %>"
                 data-description="<%= item.deskripsi_album %>">
                <div class="album-img-wrapper">
                  <img src="/images/album/<%= item.gambar_album %>" class="album-img" alt="<%= item.nama_album %>">
                </div>
              </a>
              <div class="portfolio-info">
                <h4><%= item.nama_album %></h4>
                <p><%= item.deskripsi_album %></p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
      
  
    </div>
  </section>






