      <!-- Section Title -->
      <div class="section-title text-center" data-aos="fade-up">
            <!-- Filter Navigation -->
      <div class="text-center mb-4">
        <ul id="album-filters" class="list-inline">
          <li class="list-inline-item filter-active" data-filter="*">Semua</li>
          <li class="list-inline-item" data-filter=".perkumpulan">Perkumpulan</li>
