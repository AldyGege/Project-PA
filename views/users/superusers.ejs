              <% const tahunSekarang = new Date().getFullYear(); for(let t = tahunSekarang - 5; t <= tahunSekarang + 1; t++) { %>
                <option value="<%= t %>" <%= t === tahunSekarang ? 'selected' : '' %>><%= t %></option>
